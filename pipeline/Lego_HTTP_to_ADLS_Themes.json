{
	"name": "Lego_HTTP_to_ADLS_Themes",
	"properties": {
		"activities": [
			{
				"name": "Copy CSV from HTTP to ADLS",
				"description": "Copy CSV from Rebrickable to Azure Data Lake Storage",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "@{pipeline().parameters.FileName}.csv"
					},
					{
						"name": "Destination",
						"value": "lego//@{pipeline().parameters.FileName}.csv"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "HttpReadSettings",
							"requestMethod": "GET"
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings",
							"skipLineCount": "0"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"enableSkipIncompatibleRow": true,
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Warning",
							"enableReliableLogging": false
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "ADLS_orka",
								"type": "LinkedServiceReference"
							},
							"path": {
								"value": "lego/errors/@pipeline().parameters.FileName.csv",
								"type": "Expression"
							}
						}
					},
					"dataIntegrationUnits": 2,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "id",
									"type": "String"
								},
								"sink": {
									"name": "ThemeID"
								}
							},
							{
								"source": {
									"name": "name",
									"type": "String"
								},
								"sink": {
									"name": "ThemeName"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "HTTP_Lego",
						"type": "DatasetReference",
						"parameters": {
							"FileName": {
								"value": "@pipeline().parameters.FileName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ADLS_Lego",
						"type": "DatasetReference",
						"parameters": {
							"FileName": {
								"value": "@pipeline().parameters.FileName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"FileName": {
				"type": "String",
				"defaultValue": "FileName"
			}
		},
		"annotations": [],
		"lastPublishTime": "2021-07-20T01:25:34Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}